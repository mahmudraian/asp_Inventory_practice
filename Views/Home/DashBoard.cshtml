@using OST_Inventory.Models


@{
    ViewBag.Title = "Home Page";
}

<script>
    function EquipmentEntry() {
        $("#dveqipmentpanel").dialog({
            resizable: false,
            height: "auto",
            width: 400,
            height: 500,
            modal: true,
        });
    }

    function MemberEntry() {
        $("#dvMemberpanel").dialog({
            resizable: false,
            height: "auto",
            width: 400,
            height: 500,
            modal: true,


        });



    }


</script>



<div class="row">
    <div class="col col-6" style="max-height:400px;overflow-y:auto;">

        <div class="card text-center">
            <div class="card-header ">
                Equipment
                <button class="btn btn-primary" onclick='return EquipmentEntry()' style="float:right;">+</button>
            </div>
            <div class="card-body">

                <table>
                    <tr>
                        <th>Name</th>
                        <th>Quantity</th>
                        <th>Stock</th>
                        <th> Date </th>

                    </tr>

                    @{
                        List<Equipment> list = Equipment.LSTEquipment();
                        foreach (Equipment obj in list)
                        {
                            <tr>
                                <td style="display:none;">@obj.EquipmentId</td>
                                    
                                <td>@obj.Name</td>
                                <td>@obj.Quantity </td>
                                <td>@obj.Stock</td>
                                <td>@obj.EntryDate</td>
                            </tr>

                        }

                    }

                </table>


            </div>
        </div>

    </div>

    <div class="col col-6" style="max-height:400px;overflow-y:auto;">

        <div class="card">
            <div class="card-header text-center">
                Assigned Equipment
                <button class="btn btn-primary" onclick='return MemberEntry()' style="float:right;">+</button>

            </div>
            <div class="card-body">

                <table>
                    <tr>
                        <th>Member User Name</th>
                        <th> Member Password </th>

                    </tr>

                    @{
                        List<Member> list01 = Member.LSTMember();
                        foreach (Member obj in list01)
                        {
                            <tr>
                                <td style="display:none;"></td>
                                <td>@obj.UserName</td>
                                <td>@obj.PassWord </td>
                            </tr>

                        }

                    }

                </table>


            </div>
        </div>

    </div>

</div>

@Html.Partial("~/Views/Home/_PartialEquipmentEnttry.cshtml")
@Html.Partial("~/Views/Home/_PartialMemberEnttry.cshtml")